<form action ='/posts/create' class="mt-3" id="create_posts">
  <div class="form-group" class="mt-5">
    <label for="title">Title</label>
    <input name="title" type="text" class="form-control bg-dark text-white font-weight-bold" id="titulo del post" placeholder="title">
  </div>
  <div class="form-group">
    <label for="image_url">URL</label>
    <input name="image_url" type="url" class="form-control bg-dark text-white font-weight-bold" id="link" placeholder="agregar url de imagen">
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    <textarea class="form-control bg-dark font-weight-bold" name="content" id="content" rows="3" placeholder="agrega una descripcion"></textarea>
  </div>
  <button type="submit" class="btn btn-danger font-weight-bold">Enviar</button>
</form>